{
  "permissions": {
    "allow": [
      "Bash(oak:*)",
      "Bash(oak *)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "command -v oak >/dev/null 2>&1 && oak ci hook SessionStart --agent claude || true",
            "timeout": 60
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "command -v oak >/dev/null 2>&1 && oak ci hook UserPromptSubmit --agent claude || true",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [
