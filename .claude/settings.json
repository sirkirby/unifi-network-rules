    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "command -v oak >/dev/null 2>&1 && oak ci hook SubagentStop --agent claude || true",
            "timeout": 60
          }
        ]
      }
    ]
  }
}